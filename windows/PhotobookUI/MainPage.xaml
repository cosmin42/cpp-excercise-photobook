<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotobookUI.MainPage">

    <ScrollView BackgroundColor="#001C13">
        <HorizontalStackLayout
            Spacing="25"
            Padding="30,0"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Button
                x:Name="NewProjectButton"
                Text="+"
                SemanticProperties.Hint="New Project"
                Clicked="OnNewProjectClicked"
                HorizontalOptions="Center"
                TextColor="#FFFFFF"
                BackgroundColor="#004C35"
                HeightRequest="120"
                WidthRequest="120"
                FontSize="Large">
            </Button>
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
