<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="PhotobookUI.TableContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:PhotobookUI"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
      mc:Ignorable="d"
      SizeChanged="OnTableContentSizeChanged">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ColorScheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{StaticResource PrimaryColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid HorizontalAlignment="Left"
                  Grid.Column="0"
                  Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Background="{StaticResource PrimaryColor}"
                        Click="OnBackClicked"
                        CornerRadius="0"
                        Grid.Column="0"
                        Content="Back "
                        x:Name="BackButton"
                        Foreground="{StaticResource MainFontColor}" />
                <Button  Content="File"
                         Foreground="{StaticResource MainFontColor}"
                         Background="{StaticResource PrimaryColor}"
                         CornerRadius="0"
                         Grid.Column="1">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style TargetType="MenuFlyoutPresenter">
                                    <Setter Property="CornerRadius"
                                            Value="0" />
                                </Style>
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                            <MenuFlyout.Items>
                                <MenuFlyoutItem Text="New" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Save" />
                                <MenuFlyoutItem Text="Save As" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Export"
                                                Click="OnExportClicked" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Exit"
                                                Click="OnExitClicked" />
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button  Content="Edit"
                         Foreground="{StaticResource MainFontColor}"
                         Background="{StaticResource PrimaryColor}"
                         CornerRadius="0"
                         Grid.Column="2" />
                <Button  Content="Help"
                         Foreground="{StaticResource MainFontColor}"
                         Background="{StaticResource PrimaryColor}"
                         CornerRadius="0"
                         Grid.Column="3">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style TargetType="MenuFlyoutPresenter">
                                    <Setter Property="CornerRadius"
                                            Value="0" />
                                </Style>
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                            <MenuFlyout.Items>
                                <MenuFlyoutItem Text="License"
                                                Click="OnLicenseClicked" />
                                <MenuFlyoutItem Text="About"
                                                Click="OnAboutClicked" />
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <ComboBox x:Name="PaperComboBox"
                          Grid.Column="4"
                          SelectionChanged="OnPaperComboBoxSelected"
                          Foreground="{StaticResource MainFontColor}">
                    <ComboBox.Resources>
                        <Color x:Key="WhiteColour">#FFFFFF</Color>
                        <StaticResource x:Key="ComboBoxBackgroundPointerOver"
                                        ResourceKey="PrimaryColor" />
                        <StaticResource x:Key="ComboBoxBackground"
                                        ResourceKey="PrimaryColor" />
                        <StaticResource x:Key="ComboBoxForegroundPointerOver"
                                        ResourceKey="WhiteColour" />
                        <StaticResource x:Key="ComboBoxForeground"
                                        ResourceKey="WhiteColour" />
                    </ComboBox.Resources>
                    <ComboBoxItem Content="A4, 300 ppi"
                                  Background="#000000" />
                    <ComboBoxItem Content="A5, 300 ppi"
                                  IsEnabled="False" />
                    <ComboBoxItem Content="A3, 300 ppi"
                                  IsEnabled="False" />
                    <ComboBoxItem Content="Custom"
                                  IsEnabled="False" />
                </ComboBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <ListView Name="MediaListView"
                          SelectionChanged="OnImportSelectionChanged"
                          SelectionMode="Single"
                          AllowDrop="True"
                          CanDragItems="True"
                          CanReorderItems="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Center"
                                  x:Name="GridListName">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       x:Name="folderImage"
                                       Source="Assets/folderIcon.png"
                                       Width="64"
                                       Height="64"
                                       HorizontalAlignment="Left" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding}"
                                           Foreground="{StaticResource MainFontColor}"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Border BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        Padding="16,8"
                        Grid.Row="0"
                        Grid.Column="0">
                    <Button Background="{StaticResource ButtonBackgroundColor}"
                            Click="OnImportFolderAdded"
                            CornerRadius="4"
                            Content="Add Media"
                            x:Name="AddMediaButton"
                            Foreground="{StaticResource MainFontColor}"
                            HorizontalAlignment="Center" />
                </Border>
            </Grid>
            <Border x:Name="CanvasBorder"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    Padding="16,8"
                    Grid.Row="0"
                    Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0"
                          Grid.Column="0"
                          Grid.ColumnSpan="3">
                        <Viewbox Stretch="Uniform">
                            <canvas:CanvasControl Height="{x:Bind CanvasHeight}"
                                                  Width="{x:Bind CanvasWidth}"
                                                  MinHeight="{x:Bind CanvasMinHeight}"
                                                  MinWidth="{x:Bind CanvasMinWidth}"
                                                  Draw="CanvasControlDraw"
                                                  x:Name="GalleryCanvas"
                                                  ClearColor="#000000" />
                        </Viewbox>
                    </Grid>
                    <Button Click="OnGalleryLeft"
                            CornerRadius="0"
                            Grid.Column="0"
                            Grid.Row="1"
                            x:Name="GalleryLeftButton"
                            Foreground="{StaticResource MainFontColor}"
                            HorizontalAlignment="Right"
                            Background="{StaticResource ButtonBackgroundDisabled}"
                            IsEnabled="False"
                            Height="50">
                        <Image Source="Assets/page-left-enabled.png" />
                    </Button>
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               x:Name="GalleryMainText"
                               Foreground="{StaticResource MainFontColor}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    <Button Background="{StaticResource ButtonBackgroundDisabled}"
                            Click="OnGalleryRight"
                            CornerRadius="0"
                            Grid.Column="2"
                            Grid.Row="1"
                            x:Name="GalleryRightButton"
                            Foreground="{StaticResource MainFontColor}"
                            IsEnabled="False"
                            Height="50">
                        <Image Source="Assets/page-right-enabled.png" />
                    </Button>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="2"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border x:Name="BorderName"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    Padding="16,8">
                <Grid Grid.Row="2"
                      Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=BorderName}" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <ListView x:Name="StagedListView"
                                  Grid.Row="0"
                                  Grid.Column="0"
                                  ScrollViewer.HorizontalScrollMode="Enabled"
                                  ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                  ScrollViewer.IsHorizontalRailEnabled="True"
                                  CanDragItems="True"
                                  CanReorderItems="False"
                                  HorizontalAlignment="Stretch"
                                  AllowDrop="True"
                                  Drop="OnDropIntoStagedPhotos"
                                  DragOver="OnDragOverStagedPhotos"
                                  SelectionMode="Extended"
                                  SelectionChanged="OnStagedPhotosSelectionChanged"
                                  Background="{StaticResource PrimaryColor}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ListViewItemPresenter ContentTransitions="{TemplateBinding ContentTransitions}"
                                                                       x:Name="Root"
                                                                       Control.IsTemplateFocusTarget="True"
                                                                       FocusVisualMargin="{TemplateBinding FocusVisualMargin}"
                                                                       SelectionCheckMarkVisualEnabled="{ThemeResource ListViewItemSelectionCheckMarkVisualEnabled}"
                                                                       CheckBrush="White"
                                                                       CheckBoxBrush="{ThemeResource ListViewItemCheckBoxBrush}"
                                                                       DragBackground="Yellow"
                                                                       DragForeground="White"
                                                                       FocusBorderBrush="{ThemeResource ListViewItemFocusBorderBrush}"
                                                                       FocusSecondaryBorderBrush="{ThemeResource ListViewItemFocusSecondaryBorderBrush}"
                                                                       PlaceholderBackground="Green"
                                                                       PointerOverBackground="{StaticResource ButtonBackgroundColor}"
                                                                       PointerOverForeground="White"
                                                                       SelectedBackground="{StaticResource ButtonBackgroundColor}"
                                                                       SelectedForeground="White"
                                                                       SelectedPointerOverBackground="{ThemeResource ListViewItemBackgroundSelectedPointerOver}"
                                                                       PressedBackground="{StaticResource ButtonBackgroundColor}"
                                                                       SelectedPressedBackground="{StaticResource ButtonBackgroundColor}"
                                                                       DisabledOpacity="{ThemeResource ListViewItemDisabledThemeOpacity}"
                                                                       DragOpacity="{ThemeResource ListViewItemDragThemeOpacity}"
                                                                       ReorderHintOffset="{ThemeResource ListViewItemReorderHintThemeOffset}"
                                                                       HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                       VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                       ContentMargin="{TemplateBinding Padding}"
                                                                       CheckMode="Overlay"
                                                                       RevealBackground="{StaticResource PrimaryColor}"
                                                                       RevealBorderThickness="0"
                                                                       RevealBorderBrush="{StaticResource ButtonBackgroundColor}"
                                                                       CornerRadius="8"
                                                                       Height="90"
                                                                       Width="140"></ListViewItemPresenter>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:ImageUIData">
                                    <Image  Height="80"
                                            Width="120"
                                            Source="{x:Bind FullPath}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    <ListView x:Name="UnstagedListView"
                              Grid.Row="1"
                              Grid.Column="0"
                              ScrollViewer.HorizontalScrollMode="Enabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Visible"
                              ScrollViewer.IsHorizontalRailEnabled="True"
                              SelectionMode="Extended"
                              SelectionChanged="OnUnstagedPhotosSelectionChanged"
                              HorizontalAlignment="Stretch"
                              AllowDrop="True"
                              CanDragItems="True"
                              CanReorderItems="False"
                              DragItemsStarting="OnUnstagedPhotosDragStarted">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ListViewItemPresenter ContentTransitions="{TemplateBinding ContentTransitions}"
                                                                   x:Name="Root"
                                                                   Control.IsTemplateFocusTarget="True"
                                                                   FocusVisualMargin="{TemplateBinding FocusVisualMargin}"
                                                                   SelectionCheckMarkVisualEnabled="{ThemeResource ListViewItemSelectionCheckMarkVisualEnabled}"
                                                                   CheckBrush="White"
                                                                   CheckBoxBrush="{ThemeResource ListViewItemCheckBoxBrush}"
                                                                   DragBackground="Yellow"
                                                                   DragForeground="White"
                                                                   FocusBorderBrush="{ThemeResource ListViewItemFocusBorderBrush}"
                                                                   FocusSecondaryBorderBrush="{ThemeResource ListViewItemFocusSecondaryBorderBrush}"
                                                                   PlaceholderBackground="Green"
                                                                   PointerOverBackground="{StaticResource ButtonBackgroundColor}"
                                                                   PointerOverForeground="White"
                                                                   SelectedBackground="{StaticResource ButtonBackgroundColor}"
                                                                   SelectedForeground="White"
                                                                   SelectedPointerOverBackground="{StaticResource ButtonBackgroundColor}"
                                                                   PressedBackground="{StaticResource ButtonBackgroundColor}"
                                                                   SelectedPressedBackground="{StaticResource ButtonBackgroundColor}"
                                                                   DisabledOpacity="{ThemeResource ListViewItemDisabledThemeOpacity}"
                                                                   DragOpacity="{ThemeResource ListViewItemDragThemeOpacity}"
                                                                   ReorderHintOffset="{ThemeResource ListViewItemReorderHintThemeOffset}"
                                                                   HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                   VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                   ContentMargin="{TemplateBinding Padding}"
                                                                   CheckMode="Overlay"
                                                                   RevealBackground="{StaticResource PrimaryColor}"
                                                                   RevealBorderThickness="0"
                                                                   RevealBorderBrush="{StaticResource ButtonBackgroundColor}"
                                                                   CornerRadius="8"
                                                                   Height="90"
                                                                   Width="140"></ListViewItemPresenter>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ImageUIData">
                                <Image Height="80"
                                       Width="120"
                                       Source="{x:Bind SmallPath}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
            <ContentDialog Title="Save Project"
                           x:Name="ProjectExitDialog"
                           PrimaryButtonText="Save"
                           SecondaryButtonText="Discard"
                           CloseButtonText="Cancel"
                           PrimaryButtonClick="OnContentDialogSaveClicked"
                           SecondaryButtonClick="OnContentDialogDiscardClicked"
                           CloseButtonClick="OnContentDialogCancelClicked" />
        </Grid>
        <Grid Grid.Row="3"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       x:Name="StatusLabelText"
                       Foreground="{StaticResource MainFontColor}"
                       Text="Status: Idle"
                       HorizontalAlignment="Left" />
            <ProgressBar Grid.Row="0"
                         Grid.Column="1"
                         x:Name="MainProgressBar"
                         Width="300"
                         Height="20"
                         Margin="20,0,0,0" />
        </Grid>
        <ContentDialog x:Name="ExportContentDialog"
                       Title="Export Photobook"
                       PrimaryButtonText="Export"
                       PrimaryButtonClick="OnExportContentDialogClicked"
                       CloseButtonText="Cancel">
            <StackPanel>
                <CheckBox x:Name="OptionPDFCheckBox"
                          Content="PDF" />
                <CheckBox x:Name="OptionJPGCheckBox"
                          Content="JPG" />
                <TextBox x:Name="ExportNameTextBox"
                         Header="Name:"
                         PlaceholderText="Photobook1" />
            </StackPanel>
        </ContentDialog>
        <ContentDialog x:Name="GenericErrorDialog"
                       Title="Error"
                       PrimaryButtonText="Ok">
            <TextBlock x:Name="GenericErrorTextBlock"
                       HorizontalAlignment="Left" />
        </ContentDialog>
        <ContentDialog x:Name="GnericMessage"
                       Title="Photobook Maker"
                       PrimaryButtonText="Ok">
            <TextBlock x:Name="GenericMessageTextBlock"
                       HorizontalAlignment="Left" />
        </ContentDialog>
    </Grid>
</Page>
