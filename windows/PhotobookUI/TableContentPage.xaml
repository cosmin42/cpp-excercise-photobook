<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PhotobookUI.TableContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotobookUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid Background="#001C13">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>

            <Button
                Background="#004C35"
                Click="onBackClicked"
                CornerRadius="0"
                Grid.Column="0"
                Grid.Row="0"
                Content="Back"
                x:Name="BackButton"
                Foreground="#FFFFFF"/>

            <winui:MenuBar VerticalAlignment="Top" Grid.Column="1" Grid.Row="0">
                <winui:MenuBarItem Background="#FF3A3A3A" Title="File" CornerRadius="0">
                    <MenuFlyoutItem Text="New" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Save" />
                    <MenuFlyoutItem Text="Save As" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Export"
                        Click="onExportClicked"/>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Exit" />
                </winui:MenuBarItem>

            </winui:MenuBar>

            <TextBlock
                Grid.Column="2"
                Grid.Row="0"
                Foreground="#FFFFFF"
                Text="Photobook"
                HorizontalAlignment="Center"/>
        </Grid>

        <Grid
            Grid.Row="1"
            Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <ListView Name="MediaListView"
                          SelectionChanged="onFoldersSelectionChanged"
                          SelectionMode="Single"
                          AllowDrop="True"
                          CanDragItems="True"
                          CanReorderItems="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Center" x:Name="GridListName">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Grid.Column="0"
                                    Background="#004C35"
                                    Content="+"
                                    Click="onAddToTableClicked"
                                    x:Name="AddToTableButton"
                                    Foreground="#FFFFFF"/>
                                <Image Grid.Column="1" x:Name="folderImage" Source="Assets/folderIcon.png" Width="64" Height="64" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Column="2" Text="{Binding}" Foreground="#FFFFFF" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Border
                    BorderBrush="#004C35"
                    BorderThickness="1"
                    Padding="16,8"
                    Grid.Row="0"
                    Grid.Column="0">
                    <Button
                        Background="#004C35"
                        Click="onAddMediaButtonClicked"
                        CornerRadius="4"
                        Content="Add Media"
                        x:Name="AddMediaButton"
                        Foreground="#FFFFFF"
                        HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <Border
                BorderBrush="#004C35"
                BorderThickness="1"
                Padding="16,8"
                Grid.Row="0"
                Grid.Column="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                        <canvas:CanvasControl
                            Width="630"
                            Height="447"
                            Draw="CanvasControlDraw"
                            x:Name="GalleryCanvas"
                            ClearColor="#000000"/>
                    </Grid>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        x:Name="GalleryMainText"
                        Foreground="#FFFFFF"
                        Text="No text"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <Button
                        Background="#004C35"
                        Click="onGalleryLeft"
                        CornerRadius="0"
                        Grid.Column="0"
                        Grid.Row="2"
                        Content="Left"
                        x:Name="GalleryLeftButton"
                        Foreground="#FFFFFF"
                        HorizontalAlignment="Right"
                        IsEnabled="False"/>

                    <Button
                        Background="#004C35"
                        Click="onGalleryRight"
                        CornerRadius="0"
                        Grid.Column="1"
                        Grid.Row="2"
                        Content="Right"
                        x:Name="GalleryRightButton"
                        Foreground="#FFFFFF"
                        IsEnabled="False"/>
                </Grid>
            </Border>
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border
                BorderBrush="#004C35"
                BorderThickness="1"
                Padding="16,8">

                <Grid
                    Grid.Row="2"
                    Grid.Column="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ListView
                            x:Name="StagedListView"
                            Grid.Row="0"
                            Grid.Column="0"
                            ScrollViewer.HorizontalScrollMode="Enabled"
                            ScrollViewer.HorizontalScrollBarVisibility="Visible"
                            ScrollViewer.IsHorizontalRailEnabled="True"
                            AllowDrop="True"
                            CanDragItems="True"
                            CanReorderItems="False"
                            HorizontalAlignment="Left">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ImageUIData">
                                <Image Source="{x:Bind FullPath}" Width="120" Height="80" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <ListView
                            x:Name="UnstagedListView"
                            Grid.Row="1"
                            Grid.Column="0"
                            ScrollViewer.HorizontalScrollMode="Enabled"
                            ScrollViewer.HorizontalScrollBarVisibility="Visible"
                            ScrollViewer.IsHorizontalRailEnabled="True"
                            AllowDrop="True"
                            CanDragItems="True"
                            CanReorderItems="False"
                            HorizontalAlignment="Left">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ImageUIData">
                                <Image Source="{x:Bind FullPath}" Width="50" Height="20" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <ContentDialog
                Title="Save Project"
                x:Name="ProjectExitDialog"
                PrimaryButtonText="Save"
                SecondaryButtonText="Discard"
                CloseButtonText = "Cancel"
                PrimaryButtonClick="onContentDialogSaveClicked"
                SecondaryButtonClick="onContentDialogDiscardClicked"
                CloseButtonClick="onContentDialogCancelClicked">
            </ContentDialog>

        </Grid>
        <Grid Grid.Row="3"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                x:Name="StatusLabelText"
                Foreground="#FFFFFF"
                Text="Status: Idle"
                HorizontalAlignment="Left"/>
            <ProgressBar
                Grid.Row="0"
                Grid.Column="1"
                x:Name="MainProgressBar"
                Width="300"
                Height="20"
                Margin="20,0,0,0"/>
        </Grid>
    </Grid>

</Page>
