<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PhotobookUI.TableContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotobookUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">

    <Grid Background="#001C13">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>

            <Button
                Background="#004C35"
                Click="onBackClicked"
                CornerRadius="0"
                Grid.Column="0"
                Grid.Row="0"
                Content="Back"
                x:Name="BackButton"
                Foreground="#FFFFFF"/>
            <TextBlock
                Grid.Column="1"
                Grid.Row="0"
                Foreground="#FFFFFF"
                Text="Photobook"
                HorizontalAlignment="Center"/>
        </Grid>


        <Grid
            Grid.Row="1"
            Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <ListView Name="MediaListView"
                          SelectionChanged="onFoldersSelectionChanged"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate x:Name="DataTemplateName">
                            <Grid VerticalAlignment="Center" x:Name="GridListName">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Grid.Column="0"
                                    Background="#004C35"
                                    Content="+"
                                    Click="onAddToTableClicked"
                                    x:Name="AddToTableButton"
                                    Foreground="#FFFFFF"/>
                                <Image Grid.Column="1" x:Name="folderImage" Source="Assets/folderIcon.png" Width="64" Height="64" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Column="2" Text="{Binding}" Foreground="#FFFFFF" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Border
                    BorderBrush="#004C35"
                    BorderThickness="1"
                    Padding="16,8"
                    Grid.Row="0"
                    Grid.Column="0">
                    <Button
                        Background="#004C35"
                        Click="onAddMediaButtonClicked"
                        CornerRadius="4"
                        Content="Add Media"
                        x:Name="AddMediaButton"
                        Foreground="#FFFFFF"
                        HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <Border
                BorderBrush="#004C35"
                BorderThickness="1"
                Padding="16,8"
                Grid.Row="0"
                Grid.Column="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                        <canvas:CanvasControl 
                            Width="350"
                            Height="248"
                            Draw="CanvasControlDraw"
                            x:Name="GalleryCanvas"
                            ClearColor="#004400"/>
                    </Grid>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        x:Name="GalleryMainText"
                        Foreground="#FFFFFF"
                        Text="No text"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <Button
                        Background="#004C35"
                        Click="onGalleryLeft"
                        CornerRadius="0"
                        Grid.Column="0"
                        Grid.Row="2"
                        Content="Left"
                        x:Name="GalleryLeftButton"
                        Foreground="#FFFFFF"
                        HorizontalAlignment="Right"
                        IsEnabled="False"/>

                    <Button
                        Background="#004C35"
                        Click="onGalleryRight"
                        CornerRadius="0"
                        Grid.Column="1"
                        Grid.Row="2"
                        Content="Right"
                        x:Name="GalleryRightButton"
                        Foreground="#FFFFFF"
                        IsEnabled="False"/>

                </Grid>

            </Border>
        </Grid>


        <Grid
            Grid.Row="2"
            Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border
                BorderBrush="#004C35"
                BorderThickness="1"
                Padding="16,8"
                Grid.Row="0"
                Grid.Column="0">

            </Border>

        </Grid>
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            x:Name="StatusLabelText"
            Foreground="#FFFFFF"
            Text="Status: Idle"
            HorizontalAlignment="Left"/>
    </Grid>
</Page>
