<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="PhotobookUI.ExitProjectDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotobookUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="TITLE"
    x:Name="ProjectExitDialog"
    PrimaryButtonText="Save"
    SecondaryButtonText="Discard"
    CloseButtonText = "Cancel"
    PrimaryButtonClick="onContentDialogSaveClicked"
    SecondaryButtonClick="onContentDialogDiscardClicked"
    CloseButtonClick="onContentDialogCancelClicked">

    <!-- Content of the ContentDialog -->
    <StackPanel>
        <TextBlock Text="This is a simple ContentDialog in WinUI 3." Margin="0,0,0,10"/>
        <TextBox PlaceholderText="Enter something..."/>
    </StackPanel>
</ContentDialog>
