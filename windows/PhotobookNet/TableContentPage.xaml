<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="PhotobookNet.TableContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:underlying="using:PhotobookRuntimeComponent"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ColorScheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{StaticResource PrimaryColor}"
          KeyDown="OnKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid HorizontalAlignment="Left"
                  Grid.Column="0"
                  Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Background="{StaticResource PrimaryColor}"
                        Click="OnBackClicked"
                        CornerRadius="0"
                        Grid.Column="0"
                        Content="Back "
                        x:Name="BackButton"
                        Foreground="{StaticResource MainFontColor}" />
                <Button  Content="File"
                         Foreground="{StaticResource MainFontColor}"
                         Background="{StaticResource PrimaryColor}"
                         CornerRadius="0"
                         Grid.Column="1">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style TargetType="MenuFlyoutPresenter">
                                    <Setter Property="CornerRadius"
                                            Value="0" />
                                </Style>
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                            <MenuFlyout.Items>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Save"
                                                Click="OnSaveClicked">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control"
                                                             Key="S" />
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Rename"
                                                Click="OnSaveAsClicked" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Import Media"
                                                Click="OnAddMediaClick" />
                                <MenuFlyoutItem Text="Export"
                                                Click="OnExportClicked" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutSubItem Text="Paper Size">
                                    <MenuFlyoutItem Text="A4" />
                                    <MenuFlyoutItem Text="A5"
                                                    IsEnabled="False" />
                                    <MenuFlyoutItem Text="A3"
                                                    IsEnabled="False" />
                                    <MenuFlyoutItem Text="Other"
                                                    IsEnabled="False" />
                                </MenuFlyoutSubItem>
                                <MenuFlyoutItem Text="Properties"
                                                Click="OnPropertiesClicked" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Exit"
                                                Click="OnExitClicked" />
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button  Content="Edit"
                         Foreground="{StaticResource MainFontColor}"
                         Background="{StaticResource PrimaryColor}"
                         CornerRadius="0"
                         Grid.Column="2">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style TargetType="MenuFlyoutPresenter">
                                    <Setter Property="CornerRadius"
                                            Value="0" />
                                </Style>
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                            <MenuFlyout.Items>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Undo"
                                                IsEnabled="False"
                                                Click="OnUndoClicked">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control"
                                                             Key="Z" />
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Redo"
                                                IsEnabled="False"
                                                Click="OnRedoClicked">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control,Shift"
                                                             Key="Z" />
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button  Content="Options"
                         Foreground="{StaticResource MainFontColor}"
                         Background="{StaticResource PrimaryColor}"
                         CornerRadius="0"
                         Grid.Column="3">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style TargetType="MenuFlyoutPresenter">
                                    <Setter Property="CornerRadius"
                                            Value="0" />
                                </Style>
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                            <MenuFlyout.Items>
                                <MenuFlyoutItem Text="Preferences"
                                                Click="OnPreferencesClicked"
                                                IsEnabled="False" />
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button  Content="Help"
                         Foreground="{StaticResource MainFontColor}"
                         Background="{StaticResource PrimaryColor}"
                         CornerRadius="0"
                         Grid.Column="4">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style TargetType="MenuFlyoutPresenter">
                                    <Setter Property="CornerRadius"
                                            Value="0" />
                                </Style>
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                            <MenuFlyout.Items>
                                <MenuFlyoutItem Text="Tips"
                                                Click="OnTipsClicked"
                                                IsEnabled="False" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="License"
                                                Click="OnLicenseClicked" />
                                <MenuFlyoutItem Text="About"
                                                Click="OnAboutClicked" />
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <!-- https://github.com/microsoft/microsoft-ui-xaml/blob/8e41f536c0baa22f4a5d23bf20cfa82202c50452/dev/TabView/TabView_themeresources.xaml TabView -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="15*" />
                </Grid.RowDefinitions>
                <CommandBar HorizontalAlignment="Left"
                            OverflowButtonVisibility="Collapsed"
                            Grid.Row="0">
                    <AppBarButton Icon="Add"
                                  Label="Add Media"
                                  Width="32"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource AppBarButtonStyle}"
                                  Click="OnAddMediaClick" />
                    <AppBarButton x:Name="RemoveMediaAppBarButton"
                                  Icon="Delete"
                                  Label="Remove Media"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource AppBarButtonStyle}"
                                  Width="32"
                                  Click="OnImportFolderRemoved" />
                    <AppBarButton Icon="Save"
                                  Label="Save"
                                  Width="32"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource AppBarButtonStyle}"
                                  Click="OnSaveProject" />
                    <AppBarButton x:Name="PreviewAppBarButton"
                                  Label="Preview"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource AppBarButtonStyle}"
                                  Width="32">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE890;"
                                      FontFamily="Segoe MDL2 Assets" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton x:Name="MakeCollage"
                                  Icon="ViewAll"
                                  Label="Collage"
                                  Width="32"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource AppBarButtonStyle}"
                                  Click="OnMakeCollageClick" />
                    <AppBarButton Icon="Send"
                                  Label="Export Album"
                                  Width="32"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource AppBarButtonStyle}"
                                  Click="OnExportClicked" />
                    <AppBarButton Icon="Help"
                                  Label="Help"
                                  Width="32"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource AppBarButtonStyle}"
                                  Click="OnAboutClicked" />
                </CommandBar>
                <controls:TabView x:Name="CentralTabView"
                                  Grid.Row="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  IsAddTabButtonVisible="False">
                    <TabView.Resources>
                        <ResourceDictionary>
                            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected"
                                             Color="{StaticResource ButtonBackgroundColor}" />
                            <SolidColorBrush x:Key="TabViewItemHeaderBackground"
                                             Color="{StaticResource PrimaryColor}" />
                            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundPointerOver"
                                             Color="{StaticResource PrimaryColor}" />
                            <SolidColorBrush x:Key="TabViewItemHeaderForegroundSelected"
                                             Color="{StaticResource MainFontColor}" />
                            <SolidColorBrush x:Key="TabViewItemHeaderForeground"
                                             Color="{StaticResource MainFontColor}" />
                            <SolidColorBrush x:Key="TabViewItemHeaderForegroundPointerOver"
                                             Color="{StaticResource MainFontColor}" />
                        </ResourceDictionary>
                    </TabView.Resources>
                    <controls:TabView.TabItems>
                        <controls:TabViewItem Header="Imports"
                                              IsClosable="False">
                            <Grid>
                                <ListView Name="MediaListView"
                                          SelectionChanged="OnImportSelectionChanged"
                                          SelectionMode="Single"
                                          AllowDrop="True"
                                          CanDragItems="True"
                                          CanReorderItems="False">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid VerticalAlignment="Center"
                                                  x:Name="GridListName">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="4*" />
                                                </Grid.ColumnDefinitions>
                                                <Image Grid.Column="0"
                                                       x:Name="folderImage"
                                                       Source="Assets/folderIcon.png"
                                                       Width="64"
                                                       Height="64"
                                                       HorizontalAlignment="Left" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding}"
                                                           Foreground="{StaticResource MainFontColor}"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </controls:TabViewItem>
                        <controls:TabViewItem Header="Collage Library"
                                              IsClosable="False">
                            <Border BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    Padding="16,8"
                                    Grid.Row="0"
                                    Grid.Column="0">
                                <Grid>
                                    <controls:GridView x:Name="CollageTemplatesGridView"
                                                       IsItemClickEnabled="True"
                                                       SelectionChanged="OnCollageSelectionChanged"
                                                       SelectionMode="Single">
                                        <controls:GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </controls:GridView.ItemsPanel>
                                        <controls:GridView.ItemTemplate>
                                            <DataTemplate x:DataType="underlying:CollageTemplateInfo">
                                                <!--TODO: Setup this ration based on the page size-->
                                                <Border Height="180"
                                                        BorderBrush="{StaticResource BorderColor}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="9*" />
                                                            <RowDefinition Height="2*" />
                                                            <RowDefinition Height="1*" />
                                                        </Grid.RowDefinitions>
                                                        <Image Grid.Row="0"
                                                               Source="{x:Bind Path}" />
                                                        <TextBlock Grid.Row="1"
                                                                   HorizontalAlignment="Center"
                                                                   Foreground="{StaticResource MainFontColor}"
                                                                   Text="{x:Bind Name}" />
                                                        <TextBlock Grid.Row="2"
                                                                   Foreground="{StaticResource MainFontColor}"
                                                                   Text="{x:Bind Info}"
                                                                   FontSize="10" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </controls:GridView.ItemTemplate>
                                    </controls:GridView>
                                </Grid>
                            </Border>
                        </controls:TabViewItem>
                        <controls:TabViewItem Header="LUTs Library"
                                              IsClosable="False">
                            <Border BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    Padding="16,8"
                                    Grid.Row="0"
                                    Grid.Column="0">
                                <Grid MaxHeight="400">
                                    <controls:GridView x:Name="LutIconsGridView"
                                                       IsItemClickEnabled="True"
                                                       SelectionMode="Single">
                                        <controls:GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </controls:GridView.ItemsPanel>
                                        <controls:GridView.ItemTemplate>
                                            <DataTemplate x:DataType="underlying:LutIconInfo">
                                                <!--TODO: Setup this ration based on the page size-->
                                                <Border Height="180"
                                                        BorderBrush="{StaticResource BorderColor}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="9*" />
                                                            <RowDefinition Height="2*" />
                                                        </Grid.RowDefinitions>
                                                        <Image Grid.Row="0"
                                                               Source="{x:Bind Path}" />
                                                        <TextBlock Grid.Row="1"
                                                                   HorizontalAlignment="Center"
                                                                   Foreground="{StaticResource MainFontColor}"
                                                                   Text="{x:Bind Name}" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </controls:GridView.ItemTemplate>
                                    </controls:GridView>
                                </Grid>
                            </Border>
                        </controls:TabViewItem>
                    </controls:TabView.TabItems>
                </controls:TabView>
            </Grid>
            <Border x:Name="CanvasBorder"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    Padding="16,8"
                    Grid.Row="0"
                    Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0"
                          Grid.Column="0"
                          x:Name="CanvasGridName"
                          SizeChanged="CanvasGridSizeChanged">
                        <canvas:CanvasControl MinHeight="{x:Bind CanvasMinHeight}"
                                              MinWidth="{x:Bind CanvasMinWidth}"
                                              Draw="OnCanvasDraw"
                                              x:Name="GalleryCanvas"
                                              ClearColor="#000000" />
                    </Grid>
                    <Grid x:Name="GalleryBottomName"
                          Grid.Row="1"
                          Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Click="OnGalleryLeft"
                                CornerRadius="0"
                                Grid.Column="0"
                                Grid.Row="0"
                                x:Name="GalleryLeftButton"
                                Foreground="{StaticResource MainFontColor}"
                                HorizontalAlignment="Right"
                                Background="{StaticResource ButtonBackgroundDisabled}"
                                IsEnabled="False"
                                Height="50">
                            <Image Source="Assets/page-left-enabled.png" />
                        </Button>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   x:Name="GalleryMainText"
                                   Foreground="{StaticResource MainFontColor}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                        <Button Background="{StaticResource ButtonBackgroundDisabled}"
                                Click="OnGalleryRight"
                                CornerRadius="0"
                                Grid.Column="2"
                                Grid.Row="0"
                                x:Name="GalleryRightButton"
                                Foreground="{StaticResource MainFontColor}"
                                IsEnabled="False"
                                Height="50">
                            <Image Source="Assets/page-right-enabled.png" />
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="2"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border x:Name="BorderName"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    Padding="16,8">
                <Grid Grid.Row="2"
                      Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=BorderName}" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <ListView x:Name="StagedListView"
                                  Grid.Row="0"
                                  Grid.Column="0"
                                  ScrollViewer.HorizontalScrollMode="Enabled"
                                  ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                  ScrollViewer.IsHorizontalRailEnabled="True"
                                  ScrollViewer.VerticalScrollMode="Disabled"
                                  CanDragItems="True"
                                  CanReorderItems="True"
                                  IsSwipeEnabled="True"
                                  HorizontalAlignment="Stretch"
                                  AllowDrop="True"
                                  Background="{StaticResource PrimaryColor}"
                                  Drop="OnDropIntoStagedPhotos"
                                  DragOver="OnDragOverStagedPhotos"
                                  DragItemsCompleted="OnStagedDragItemsCompleted"
                                  DragItemsStarting="OnStagedDragItemsStarting"
                                  SelectionMode="Extended"
                                  Tapped="OnClickedOutsideList"
                                  SelectionChanged="OnStagedPhotosSelectionChanged">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ListViewItemPresenter ContentTransitions="{TemplateBinding ContentTransitions}"
                                                                       x:Name="Root"
                                                                       Control.IsTemplateFocusTarget="True"
                                                                       FocusVisualMargin="{TemplateBinding FocusVisualMargin}"
                                                                       SelectionCheckMarkVisualEnabled="{ThemeResource ListViewItemSelectionCheckMarkVisualEnabled}"
                                                                       CheckBrush="White"
                                                                       CheckBoxBrush="{ThemeResource ListViewItemCheckBoxBrush}"
                                                                       DragBackground="Yellow"
                                                                       DragForeground="White"
                                                                       FocusBorderBrush="{ThemeResource ListViewItemFocusBorderBrush}"
                                                                       FocusSecondaryBorderBrush="{ThemeResource ListViewItemFocusSecondaryBorderBrush}"
                                                                       PlaceholderBackground="Green"
                                                                       PointerOverBackground="{StaticResource ButtonBackgroundColor}"
                                                                       PointerOverForeground="White"
                                                                       SelectedBackground="{StaticResource ButtonBackgroundColor}"
                                                                       SelectedForeground="White"
                                                                       SelectedPointerOverBackground="{ThemeResource ButtonPointerOverWhenSelected}"
                                                                       PressedBackground="{StaticResource ButtonBackgroundColor}"
                                                                       SelectedPressedBackground="{StaticResource ButtonBackgroundColor}"
                                                                       DisabledOpacity="{ThemeResource ListViewItemDisabledThemeOpacity}"
                                                                       DragOpacity="{ThemeResource ListViewItemDragThemeOpacity}"
                                                                       ReorderHintOffset="{ThemeResource ListViewItemReorderHintThemeOffset}"
                                                                       HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                       VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                       ContentMargin="{TemplateBinding Padding}"
                                                                       CheckMode="Overlay"
                                                                       RevealBackground="{StaticResource PrimaryColor}"
                                                                       RevealBorderThickness="0"
                                                                       RevealBorderBrush="{StaticResource ButtonBackgroundColor}"
                                                                       CornerRadius="8"
                                                                       Height="90"
                                                                       Width="140"></ListViewItemPresenter>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="underlying:VirtualImagePtr">
                                    <Image  Height="80"
                                            Width="120"
                                            Source="{x:Bind Frontend.SmallPath}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    <ListView x:Name="UnstagedListView"
                              Grid.Row="1"
                              Grid.Column="0"
                              ScrollViewer.HorizontalScrollMode="Enabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Visible"
                              ScrollViewer.IsHorizontalRailEnabled="True"
                              ScrollViewer.VerticalScrollMode="Disabled"
                              SelectionMode="Extended"
                              SelectionChanged="OnUnstagedPhotosSelectionChanged"
                              HorizontalAlignment="Stretch"
                              AllowDrop="True"
                              CanDragItems="True"
                              CanReorderItems="False"
                              Tapped="OnClickedOutsideList"
                              DragItemsStarting="OnUnstagedPhotosDragStarted">
                        <ListView.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control"
                                                 Key="A"
                                                 Invoked="UnstagedSelectAllInvoked" />
                        </ListView.KeyboardAccelerators>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ListViewItemPresenter ContentTransitions="{TemplateBinding ContentTransitions}"
                                                                   x:Name="Root"
                                                                   Control.IsTemplateFocusTarget="True"
                                                                   FocusVisualMargin="{TemplateBinding FocusVisualMargin}"
                                                                   SelectionCheckMarkVisualEnabled="{ThemeResource ListViewItemSelectionCheckMarkVisualEnabled}"
                                                                   CheckBrush="White"
                                                                   CheckBoxBrush="{ThemeResource ListViewItemCheckBoxBrush}"
                                                                   DragBackground="Yellow"
                                                                   DragForeground="White"
                                                                   FocusBorderBrush="{ThemeResource ListViewItemFocusBorderBrush}"
                                                                   FocusSecondaryBorderBrush="{ThemeResource ListViewItemFocusSecondaryBorderBrush}"
                                                                   PlaceholderBackground="Green"
                                                                   PointerOverBackground="{StaticResource ButtonBackgroundColor}"
                                                                   PointerOverForeground="White"
                                                                   SelectedBackground="{StaticResource ButtonBackgroundColor}"
                                                                   SelectedForeground="White"
                                                                   SelectedPointerOverBackground="{ThemeResource ButtonPointerOverWhenSelected}"
                                                                   PressedBackground="{StaticResource ButtonBackgroundColor}"
                                                                   SelectedPressedBackground="{StaticResource ButtonBackgroundColor}"
                                                                   DisabledOpacity="{ThemeResource ListViewItemDisabledThemeOpacity}"
                                                                   DragOpacity="{ThemeResource ListViewItemDragThemeOpacity}"
                                                                   ReorderHintOffset="{ThemeResource ListViewItemReorderHintThemeOffset}"
                                                                   HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                   VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                   ContentMargin="{TemplateBinding Padding}"
                                                                   CheckMode="Overlay"
                                                                   RevealBackground="{StaticResource PrimaryColor}"
                                                                   RevealBorderThickness="0"
                                                                   RevealBorderBrush="{StaticResource ButtonBackgroundColor}"
                                                                   CornerRadius="8"
                                                                   Height="90"
                                                                   Width="140"></ListViewItemPresenter>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="underlying:VirtualImagePtr">
                                <Image Height="80"
                                       Width="120"
                                       Source="{x:Bind Frontend.SmallPath}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="3"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       x:Name="StatusLabelText"
                       Foreground="{StaticResource MainFontColor}"
                       Text="Status: Idle"
                       HorizontalAlignment="Left" />
            <ProgressBar Grid.Row="0"
                         Grid.Column="1"
                         x:Name="MainProgressBar"
                         Width="300"
                         Height="20"
                         Margin="20,0,0,0" />
        </Grid>
        <ContentDialog x:Name="PropertiesContentDialog"
                       Title="Properties"
                       PrimaryButtonText="Ok"
                       Foreground="{StaticResource MainFontColor}"
                       Background="{StaticResource PrimaryColor}">
            <TextBlock x:Name="PropertiesContentTextBlock"
                       HorizontalAlignment="Left"
                       TextWrapping="WrapWholeWords" />
        </ContentDialog>
        <ContentDialog x:Name="ExportContentDialog"
                       Title="Export Photobook"
                       Foreground="{StaticResource MainFontColor}"
                       Background="{StaticResource PrimaryColor}"
                       PrimaryButtonStyle="{StaticResource ContentDialogPrimaryButtonStyle}"
                       PrimaryButtonText="Export"
                       PrimaryButtonClick="OnExportContentDialogClicked"
                       CloseButtonText="Cancel">
            <StackPanel>
                <CheckBox x:Name="OptionPDFCheckBox"
                          Foreground="#FFFFFF"
                          Content="PDF (Memory Optimized)">
                    <CheckBox.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.ThemeDictionaries>
                                <ResourceDictionary x:Key="Light">
                                    <SolidColorBrush x:Key="CheckBoxForegroundUnchecked"
                                                     Color="White" />
                                    <SolidColorBrush x:Key="CheckBoxForegroundChecked"
                                                     Color="White" />
                                    <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundChecked"
                                                     Color="White" />
                                    <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeChecked"
                                                     Color="White" />
                                    <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUnchecked"
                                                     Color="White" />
                                    <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPointerOver"
                                                     Color="White" />
                                    <SolidColorBrush x:Key="CheckBoxForegroundUncheckedPointerOver"
                                                     Color="White" />
                                    <SolidColorBrush x:Key="CheckBoxForegroundCheckedPointerOver"
                                                     Color="White" />
