compilation_database_dir: .
output_directory: .
add_compile_flags:
  - -D_CLANG_UML_
diagrams:
  include_diagram:
    type: include
    title: Includes diagram
    glob:
      - PB/src/*
    generate_system_headers: false
    using_namespace: PB
    include:
      paths:
        - PB/include
        - PB/src
    exclude:
      namespaces:
        - std
  class_diagram:
    type: class
    glob:
      - PB/src/*
    include:
      namespaces:
        - PB
      paths:
        - PB/include
        - PB/src
      access:
        - public
    exclude:
      namespaces:
        - std
      access:
        - protected
        - private
  top_level_class_diagram:
    type: class
    glob:
      - PB/src/PhotoBook.cpp
    include:
      context:
        - match:
            radius: 1
            pattern: PB::Photobook
      access:
        - public
    exclude:
      namespaces:
        - std
      access:
        - protected
        - private
  